@model YelpCamp.Dtos.CommentDTO

@{
    ViewBag.Title = "CreateComment";
}

<h1 style="text-align: center">Add New Comment to @Model.CampgroundName</h1>
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div style="width: 30%; margin: 25px auto;">
                @using (Html.BeginForm("CreateComment", "Comment", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.CampgroundId)
                    <div class="form-group">
                        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", placeholder = "text" , style = "width:280px" } })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })                    
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" style="width:280px" value="Submit!">
                    </div>
                }
                <a href="/campground/Details/@Model.CampgroundId" style="margin-top:20px">Go Back</a>
            </div>
        </div>
    </div>

    


<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>
